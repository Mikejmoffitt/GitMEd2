#include "main.h"

void playsfx(ALLEGRO_SAMPLE* snd)
{
	al_play_sample(snd,1,0,1,ALLEGRO_PLAYMODE_ONCE,0);
}

void update()
{
	al_flip_display();
}

int main(int argc, char **argv)
{
	al_init();
	al_init_primitives_addon();
	al_init_image_addon();
	
	al_set_new_display_option(ALLEGRO_VSYNC, 1, ALLEGRO_SUGGEST);
	int flags = 0;
	flags = flags | ALLEGRO_FULLSCREEN_WINDOW | ALLEGRO_NOFRAME;
	al_set_new_display_flags(flags);
	display = al_create_display(512,384);
	
	
	for (int i = 0; i < 120; i++)
{
	al_clear_to_color(al_map_rgb(i,i,i));
	al_put_pixel(0,0,al_map_rgb(0,0xFF,0xFF));
	al_put_pixel(511,0,al_map_rgb(0,0xFF,0xFF));
	al_put_pixel(0,383,al_map_rgb(0,0xFF,0xFF));
	al_put_pixel(511,383,al_map_rgb(0,0xFF,0xFF));
	al_flip_display();
}

	al_destroy_display(display);
	return 0;
}
